{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/docs/(.*)",
      "dest": "/docs/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/generate-report",
      "schedule": "0 0 * * *"
    }
  ],
  "functions": {
    "api/generate-report": {
      "maxDuration": 60
    },
    "api/reports/*": {
      "maxDuration": 10
    }
  }
} 