{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "app/api/run-scraper/route.ts",
      "use": "@vercel/node"
    }
  ],
  "public": true,
  "crons": [
    {
      "path": "/api/run-scraper",
      "schedule": "0 0 * * *"
    }
  ],
  "routes": [
    {
      "src": "/api/scrape",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, x-api-key"
      },
      "continue": true
    }
  ]
} 